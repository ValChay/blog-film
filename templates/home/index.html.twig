{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Image</th>
            <th>Resume</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>

        {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td><img src="{{ asset('uploads/table_images/' ~ article.image ) }}" class="img"></td>
                <td>{{ article.resume }}</td><td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
